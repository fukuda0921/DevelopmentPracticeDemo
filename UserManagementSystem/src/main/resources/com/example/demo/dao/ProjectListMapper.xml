<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
       PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
       "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.example.demo.dao.ProjectListMapper">

<!-- userIdに紐づく勤怠情報を取得 -->
<select id="findByUserId" parameterType="java.lang.Integer" resultType="com.example.demo.entity.ProjectListEntity">
        SELECT
            project_id,           
            user_id,
            project_name,
            remote_availability,
            work_location,
            job_description,
            programming_language,
            remarks
        FROM
            project_tbl
        WHERE
            user_id = #{userId}
        AND
        	delete_flag = 0
        ORDER BY
            project_id ASC
    </select>

	
</mapper>