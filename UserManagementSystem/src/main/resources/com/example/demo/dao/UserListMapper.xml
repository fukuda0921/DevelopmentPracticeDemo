<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
       PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
       "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.dao.UserListMapper">

      <!-- ユーザー情報と権限を全取得する  -->
     <select id="findAll" resultType="com.example.demo.entity.UserListEntity">
       SELECT
            u.user_id,
            u.name,
            u.kana,
            u.address,
            u.password,
            up.role 
        FROM
            user_tbl u
        LEFT JOIN
            user_permission_tbl up ON u.user_id = up.user_id
        ORDER BY
            u.user_id
    </select>



</mapper>